<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
  <meta type="array">
    <langDisable>1</langDisable>
  </meta>
  <ROOT type="array">
    <type>array</type>
    <el type="array">
      <field_heading type="array">
        <TCEforms type="array">
          <label>Heading</label>
          <config type="array">
            <type>input</type>
            <size>30</size>
            <eval>trim</eval>
          </config>
        </TCEforms>
      </field_heading>
      <field_subheading type="array">
        <TCEforms type="array">
          <label>Sub-Heading</label>
          <config type="array">
            <type>input</type>
            <size>30</size>
            <eval>trim</eval>
          </config>
        </TCEforms>
      </field_subheading>
      <field_htype type="array">
        <TCEforms type="array">
          <label>H1 / H2</label>
          <config type="array">
            <type>select</type>
            <items type="array">
              <numIndex index="0" type="array">
                <numIndex index="0">H1</numIndex>
                 <numIndex index="1">h1</numIndex>
              </numIndex>
              <numIndex index="1" type="array">
                <numIndex index="0">H2</numIndex>
                <numIndex index="1">h2</numIndex>
              </numIndex>
            </items>
          </config>
        </TCEforms>
      </field_htype>
      <field_color type="array">
        <TCEforms type="array">
          <label>Text Color</label>
          <config type="array">
            <type>select</type>
            <items type="array">
              <numIndex index="0" type="array">
                <numIndex index="0">White</numIndex>
                 <numIndex index="1">white</numIndex>
              </numIndex>
              <numIndex index="1" type="array">
                <numIndex index="0">Black</numIndex>
                <numIndex index="1">black</numIndex>
              </numIndex>
            </items>
          </config>
        </TCEforms>
      </field_color>
      <field_imagefull type="array">
        <TCEforms type="array">
          <label>Image (2880px)</label>
          <config type="array">
            <type>group</type>
            <internal_type>file</internal_type>
            <allowed>gif,png,jpg,jpeg</allowed>
            <max_size>5000</max_size>
            <uploadfolder>uploads/tx_armtemplate</uploadfolder>
            <show_thumbs>1</show_thumbs>
            <size>1</size>
            <maxitems>1</maxitems>
            <minitems>0</minitems>
          </config>
        </TCEforms>
      </field_imagefull>
      <field_imagemid type="array">
        <TCEforms type="array">
          <label>Image (1440px)</label>
          <config type="array">
            <type>group</type>
            <internal_type>file</internal_type>
            <allowed>gif,png,jpg,jpeg</allowed>
            <max_size>2000</max_size>
            <uploadfolder>uploads/tx_armtemplate</uploadfolder>
            <show_thumbs>1</show_thumbs>
            <size>1</size>
            <maxitems>1</maxitems>
            <minitems>0</minitems>
          </config>
        </TCEforms>
      </field_imagemid>
      <field_imagemob type="array">
        <TCEforms type="array">
          <label>Image (768px)</label>
          <config type="array">
            <type>group</type>
            <internal_type>file</internal_type>
            <allowed>gif,png,jpg,jpeg</allowed>
            <max_size>1000</max_size>
            <uploadfolder>uploads/tx_armtemplate</uploadfolder>
            <show_thumbs>1</show_thumbs>
            <size>1</size>
            <maxitems>1</maxitems>
            <minitems>0</minitems>
          </config>
        </TCEforms>
      </field_imagemob>
      <field_imgalt type="array">
        <TCEforms type="array">
          <label>IMAGE Alt text</label>
          <config type="array">
            <type>input</type>
            <size>30</size>
            <eval>trim</eval>
          </config>
        </TCEforms>
      </field_imgalt>
    </el>
  </ROOT>
</T3DataStructure>