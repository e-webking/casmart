<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
  <meta type="array">
    <langDisable>1</langDisable>
  </meta>
  <ROOT type="array">
    <type>array</type>
    <el type="array">
        <field_align type="array">
            <TCEforms type="array">
              <label>Alignment</label>
              <config type="array">
                <type>select</type>
                <items type="array">
                  <numIndex index="0" type="array">
                    <numIndex index="0">Left</numIndex>
                     <numIndex index="1">text-left</numIndex>
                  </numIndex>
                  <numIndex index="1" type="array">
                    <numIndex index="0">Center</numIndex>
                    <numIndex index="1">text-center</numIndex>
                  </numIndex>
                </items>
              </config>
            </TCEforms>
      </field_align>
      <field_heading type="array">
        <TCEforms type="array">
          <label>Heading</label>
          <config type="array">
            <type>input</type>
            <size>30</size>
            <eval>trim</eval>
          </config>
        </TCEforms>
      </field_heading>
      <field_htype type="array">
        <TCEforms type="array">
          <label>H1 / H2 / H3</label>
          <config type="array">
            <type>select</type>
            <items type="array">
              <numIndex index="0" type="array">
                <numIndex index="0">H1</numIndex>
                 <numIndex index="1">h1</numIndex>
              </numIndex>
              <numIndex index="1" type="array">
                <numIndex index="0">H2</numIndex>
                <numIndex index="1">h2</numIndex>
              </numIndex>
              <numIndex index="2" type="array">
                <numIndex index="0">H3</numIndex>
                <numIndex index="1">h3</numIndex>
              </numIndex>
            </items>
          </config>
        </TCEforms>
      </field_htype>
      <field_inv type="array">
        <TCEforms type="array">
          <label>Inverse</label>
          <config type="array">
            <type>check</type>
          </config>
        </TCEforms>
      </field_inv>
      <field_text type="array">
        <TCEforms type="array">
          <label>Text</label>
          <config type="array">
            <type>text</type>
            <rows>3</rows>
            <cols>60</cols>
          </config>
        </TCEforms>
      </field_text>
      <field_label type="array">
        <TCEforms type="array">
          <label>CTA Label</label>
          <config type="array">
            <type>input</type>
            <size>20</size>
            <eval>trim</eval>
          </config>
        </TCEforms>
      </field_label>
      <field_link>
          <TCEforms type="array">
          <label>CTA Link</label>
          <config type="array">
            <type>input</type>
            <size>30</size>
            <eval>trim</eval>
            <wizards type="array">
                <link type="array">
                    <type>popup</type>
                    <title>Link</title>
                    <icon>link_popup.gif</icon>
                    <module type="array">
                        <name>wizard_element_browser</name>
                        <urlParameters type="array">
                            <mode>wizard</mode>
                        </urlParameters>
                    </module>
                    <JSopenParams>height=300,width=500,status=0,menubar=0,scrollbars=1</JSopenParams>
                </link>
            </wizards>
            <softref>typolink</softref>
          </config>
        </TCEforms>
      </field_link>
    </el>
  </ROOT>
</T3DataStructure>